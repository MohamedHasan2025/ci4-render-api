<IfModule mod_rewrite.c>
    RewriteEngine On

    # Remove trailing slash (except root)
    RewriteCond %{REQUEST_URI} .+/$
    RewriteRule ^(.+)/$ /$1 [R=301,L]

    RewriteBase /
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
